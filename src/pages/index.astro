---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import EmploymentItem from '../components/EmploymentItem.astro';
import CopyEmail from "../components/CopyEmail.astro";
const jobs = [
  {
	startDate: "2024-01-01",
    endDate: "present",
    startLabel: '2024',
	endLabel: 'present',
	ariaLabel: 'Associate Research Engineer at ABB, from 2024 to present day.',
    title: 'Associate Research Engineer - ABB',
    subTitle: 'Intern Research Engineer',
    description: `
      Built monitoring algorithms for comparing baseline “healthy” powertrain states to live operating data both in embedded hardware and on the cloud separately.<br><br>
      Built a testing framework with MATLAB and Simulink to verify all operating configurations automatically.<br><br>
      Built an algorithm for improving training time of machine learning algorithms, with only a small prediction accuracy drop.<br><br>
      Drove the project forward with weekly updates, prioritizing the next most important tasks.
    `,
    skills: ['C++', 'Python', 'MATLAB', 'Simulink'],
    href: 'https://global.abb/group/en/technology/corporate-research-centers/sweden'
  },
  {
	startDate: "2023-10-01",
    endDate: "2023-12-31",
	startLabel: 'Oct',
	endLabel: 'Dec 2023',
	ariaLabel: 'Full stack developer at Klardeal between october and december of 2023.',
    title: 'Full stack Developer - Klardeal',
    subTitle: '',
    description: `
      Delivered a deal-matching platform in <2 months, acquiring 25 paying customers during my contract.
    `,
    skills: ['TypeScript', 'SQL', 'HTML', 'CSS'],
    href: 'https://klardeal.se/'
  },
  {
	startDate: "2021-11-01",
    endDate: "2022-01-31",
	startLabel: 'Nov 2021',
	endLabel: 'Jan 2022',
	ariaLabel: 'Software Developer in a project course held by Mälardalens University. Worked together with a team students on a project we received from Westermo.',
    title: 'Software Developer - Project course (Westermo)',
    subTitle: '',
    description: `
      Worked together with a team of 6 students in total building risk integration software as a web app for Westermo. This was a part of a project course on Software Engineering at Mälardalens University.<br><br>
	  Responsible for primarily leading the frontend development of the project.
    `,
    skills: ['Vue.js', 'Docker', 'SQL'],
    href: 'https://www.mdu.se/utbildning/kurser?kod=DVA313'
  },
];
---

<Layout>
	<a
	href="#content"
	class="absolute left-0 top-0 block -translate-y-[200%]
			rounded bg-gradient-to-b from-primary to-primary/80
			px-4 py-3 text-sm font-bold uppercase tracking-widest text-primary-foreground focus-visible:translate-y-0"
	>
	Skip to Content
	</a>
	 <header class="w-full flex mt-16 items-center">
		<div class="w-full max-w-[60rem] pxPage mx-auto flex md:items-center gap-6 md:flex-row flex-col">
			<div class="flex items-center gap-6">
				<svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M0 0H9H21C24.1826 0 27.2348 1.58035 29.4853 4.3934C31.7357 7.20645 33 11.0218 33 15C33 18.9782 31.7357 22.7936 29.4853 25.6066C27.2348 28.4196 24.1826 30 21 30L25 36H32.0021L28.5 29.9956C30.3398 28.6248 32.1035 26.9004 33.7148 23.5664L48.0001 47.998H39.0001L35.5017 42H29L33 48H24L12 30H9V48H0V30V21V9V0ZM18 21C21.3137 21 24 18.3137 24 15C24 11.6863 21.3137 9 18 9H9V21H18Z" fill="#FAFAFA"/>
				</svg>
				<div>
					<h1 class="font-bold text-2xl md:text-4xl">Rikard Hallberg</h1>
					<span class="font-medium md:text-2xl text-[#929292]">Software Engineer</span>
				</div>
			</div>
			<span class="h-20 bg-foreground w-0.5 md:block hidden"></span>
			<nav aria-label="Social media links">
				<ul class="flex gap-6 items-center">
					<li>
						<a href="https://www.linkedin.com/in/rikardhallberg" referrerpolicy="no-referrer" rel="noopener noreferrer" aria-label="LinkedIn profile of Rikard Hallberg">
							<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
								<g clip-path="url(#clip0_1398_3058)">
									<path d="M33.6313 4H6.3625C5.05625 4 4 5.03125 4 6.30625V33.6875C4 34.9625 5.05625 36 6.3625 36H33.6313C34.9375 36 36 34.9625 36 33.6938V6.30625C36 5.03125 34.9375 4 33.6313 4ZM13.4937 31.2687H8.74375V15.9937H13.4937V31.2687ZM11.1188 13.9125C9.59375 13.9125 8.3625 12.6812 8.3625 11.1625C8.3625 9.64375 9.59375 8.4125 11.1188 8.4125C12.6375 8.4125 13.8687 9.64375 13.8687 11.1625C13.8687 12.675 12.6375 13.9125 11.1188 13.9125ZM31.2687 31.2687H26.525V23.8438C26.525 22.075 26.4937 19.7937 24.0562 19.7937C21.5875 19.7937 21.2125 21.725 21.2125 23.7188V31.2687H16.475V15.9937H21.025V18.0813H21.0875C21.7187 16.8813 23.2688 15.6125 25.575 15.6125C30.3813 15.6125 31.2687 18.775 31.2687 22.8875V31.2687V31.2687Z" fill="white"/>
								</g>
								<defs>
									<clipPath id="clip0_1398_3058">
										<rect width="32" height="32" fill="white" transform="translate(4 4)"/>
									</clipPath>
								</defs>
							</svg>
						</a>
					</li>
					<li>
						<a href="https://github.com/rikhall1515" referrerpolicy="no-referrer" rel="noopener noreferrer" aria-label="GitHub profile of Rikard Hallberg">
							<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
								<g clip-path="url(#clip0_1398_3059)">
